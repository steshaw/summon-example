#!/usr/bin/env bash

set -euo pipefail

# Work around caching files that are not readable.
# https://github.com/actions/cache/issues/133
#
# Not currently needed  because we are using the single-user Nix
# installation.
#
sudo mkdir -p /nix/store
sudo chown -R "$(id -u)" /nix/store/

